{% extends 'base.html.twig' %}

{% block title %}Campaign content{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-4">
            <a href="{{ path('batch_show', {id: batch.id}) }}" class="btn btn-block btn-info">Go back to Campaigns</a>
        </div>
        <div class="col-sm-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <span>Create campaign content</span>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <button class="btn btn-block btn-info">{{ button_label|default('Save') }}</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
