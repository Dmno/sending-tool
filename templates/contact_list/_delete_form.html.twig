<form style="display: inline-block" method="post" action="{{ path('contact_list_delete', {'id': contact_list.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contact_list.id) }}">
    <button class="btn btn-sm btn-danger">Delete</button>
</form>
