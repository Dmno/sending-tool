<table class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Alive / Dead</th>
        <th>Created At</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for batch in batches %}
        {% if batch.category == category %}
            <tr>
                <td>{{ batch.name }}</td>
                <td>{{ batch.description }}</td>
                <td>{{ batch.aliveCount }} / {{ batch.deadCount }}</td>
                <td>{{ batch.createdAt|date('Y-m-d H:i') }}</td>
                <td style="width: 140px">
                    <a href="{{ path('batch_show', {id: batch.id}) }}" class="btn btn-info btn-sm">View</a>
                    {{ include('batch/_delete_form.html.twig') }}
                </td>
            </tr>
        {% endif %}
    {% else %}
        <tr>
            <td colspan="5">no records found</td>
        </tr>
    {% endfor %}
    </tbody>
</table>